# GovTrip Environment Variables

# Database
DATABASE_URL="postgresql://govtrip:your_password_here@localhost:5432/govtrip"

# Redis (optional)
REDIS_URL="redis://localhost:6379"

#NextAuth/Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# App Configuration
NODE_ENV="development"
APP_NAME="GovTrip Intelligence"
APP_URL="http://localhost:3000"

# API Keys (optional)
# OPENAI_API_KEY="sk-..."  # For AI features
# GOOGLE_MAPS_API_KEY="..."  # For maps integration

# Security
SESSION_SECRET="your-session-secret-here"
ENCRYPTION_KEY="your-encryption-key-32-chars"

# Email (optional, for notifications)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-password"

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR="./uploads"

# Features Flags
ENABLE_AI_FEATURES=false
ENABLE_REALTIME_GPS=false
ENABLE_CARBON_TRACKING=true

# Monitoring (optional)
# SENTRY_DSN="https://..."
# GOOGLE_ANALYTICS_ID="G-..."
